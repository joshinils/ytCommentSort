{

    "manifest_version": 2,
    "name": "ytCommentSort",
    "version": "1.0",

    "description": "shall sort youtube comments with a timestamp after said timestamp",

    "icons": {
        "48": "icons/border-48.png"
    },

    "content_scripts": [{
        "matches": ["*://www.youtube.com/watch*"],
        "js": ["ytCommentSort.js"]
    }]

}